{
  "kind": "singleType",
  "collectionName": "globals",
  "info": {
    "singularName": "global",
    "pluralName": "globals",
    "displayName": "Global",
    "description": "Define global settings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "siteName": {
      "type": "string",
      "required": true
    },
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files", "videos"]
    },
    "siteDescription": {
      "type": "text",
      "required": true
    },
    "showLandingPage": {
      "type": "boolean",
      "default": true,
      "required": false
    },
    "showUpgradePage": {
      "type": "boolean",
      "default": false,
      "required": false
    },
    "defaultSeo": {
      "type": "component",
      "component": "shared.seo",
      "repeatable": false
    },
    "publicRoutes": {
      "type": "component",
      "component": "shared.public-routes",
      "repeatable": true,
      "required": false
    }
  }
}
